<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".MainActivity">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

        <Button
                android:id="@+id/btn_all_usb"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:onClick="getAllUsbDevices"
                android:text="all_usb"/>

        <Button
                android:id="@+id/btn_camera_usb"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:onClick="getUsbCamera"
                android:text="usb_camera"/>
        <Button
                android:id="@+id/btn_audio_usb"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:onClick="getUsbAudio"
                android:text="usb_audio"/>
        <Button
                android:id="@+id/btn_check_mic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="checkMic"
                android:text="checkMic"/>
    </LinearLayout>

</LinearLayout>